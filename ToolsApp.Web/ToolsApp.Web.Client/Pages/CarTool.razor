@page "/car-tool"

<header>
    <h3>Car Tool</h3>
</header>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var car in cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Color</td>
                <td>@car.Price</td>
            </tr>
        }
    </tbody>
</table>


@code {
    IEnumerable<ICar> cars = new List<ICar>
    {
        new Car { Id = 1, Make="Pontiac", Model="Grand Am", Year=2008, Color="Silver", Price=14000},
        new Car { Id = 2, Make="Honda", Model="Ridgeline", Year=2017, Color="Black", Price=42456},
    };
}
